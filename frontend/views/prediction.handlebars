  <body>
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="masthead mb-auto">
          <div class="inner">
            <h3 class="masthead-brand"><i class="fas fa-film"></i> Movie Paradise </h3>
            <nav class="nav nav-masthead justify-content-center">
              <a class="nav-link" href="http://127.0.0.1:8081/login">Login </a>
              <a class="nav-link" href="http://127.0.0.1:8081/">Sign Up</a>
              <a class="nav-link active" href="http://127.0.0.1:8081/prediction">Prediction</a>
            </nav>
          </div>
        </header>
          <h2 class="normal-heading">Prediction</h2>
            <form action="http://127.0.0.1:8081/prediction" method="POST">
              <div class="col mt-4">
                    <label class="input-label">Budget</label>
                    <input name="budget" type="number" min="0" class="input-field mr-auto" placeholder="Enter the budget of the movie" required>
              </div>
              <div class="col mt-4">
                <label class="input-label" style="margin-right:8%;">Cast</label>
                <input name="cast" type="text" class="input-field ml-auto" placeholder="Enter the cast of the movie" required>
              </div>
              <div class="col mt-4">
                <label class="input-label" style="margin-right:5%;">Length</label>
                <input name="length" type="text" class="input-field ml-auto" placeholder="Enter the length of the movie" required>
              </div>
              <div class="col mt-4">
                <label class="input-label" style="margin-right:4%;">Country</label>
                <input name="country" type="text" class="input-field ml-auto" placeholder="Enter the country of the movie" required>
              </div>
              <div class="col mt-4">
                <label class="input-label" style="margin-right:4%;">Director</label>
                <input name="director" type="text" class="input-field ml-auto" placeholder="Enter the director of the movie" required>
              </div>
              <div class="col mt-4">
                <label class="input-label" style="margin-right:2%;">Release Date</label>
                <input name="date" type="date" class="input-field ml-auto" placeholder="Enter the release date of the movie" required>
              </div>
              <br>
              <button type="submit" class="btn btn-outline-primary mt-4">Submit</button>
            </form>

        <footer class="mastfoot mt-auto">
          <div class="inner">
            Copyright <i class="far fa-copyright"></i> FetchApi
          </div>
        </footer>
      </div>


